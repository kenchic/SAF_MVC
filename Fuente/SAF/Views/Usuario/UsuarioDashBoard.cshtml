<!DOCTYPE html>
@{
	Layout = null;
	var base64 = Convert.ToBase64String(CoreGeneral.Recursos.Constantes.logo);
	var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
}

<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>@ViewBag.Title - SAF</title>

		<environment include="Development">
			<link rel="stylesheet" href="~/lib/bootstrap_4.1.1/css/bootstrap.css" />
			<link rel="stylesheet" href="~/lib/fontawesome_5.0.12/css/fontawesome-all.css" />
			<link rel="stylesheet" href="~/lib/slidermenu/sidebar-menu.css">
		</environment>
	</head>
	<body>
		<div id="page">
			<div id="header">
				<img src="@imgSrc" class="text-md-left" />
				<span id="pushRight" class="btn">&#9776;</span>
			</div>
			<div id="content">
			</div>
			<div id="menu">
			</div>
		</div>

		<environment include="Development">
			<script src="~/lib/jquery_3.3.1/jquery-3.3.1.js"></script>
			<script src="~/lib/bootstrap_4.1.1/js/bootstrap.js"></script>
			<script src="~/lib/slidermenu/sidebar-menu.js"></script>
			<script src="~/js/saf.js"></script>
		</environment>
	</body>
</html>

