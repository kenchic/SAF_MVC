@model CoreSeg.Models.UsuarioModel

@{
	ViewBag.Title = CoreGeneral.Recursos.Idioma.TituloUsuarioLogin;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<h4>Usuario</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="row">
			<div class="form-group">
				@Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-lg-1" })
				<div class="col-lg-3">
					@Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "control-label col-lg-1" })
				<div class="col-lg-3">
					@Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
				</div>
				<div class="col-lg-4"></div>
			</div>
			<div class="form-group">
				<div class="col-lg-3">
					<input type="submit" value="Login" class="btn btn-default btn-success" />
					<a asp-action="RegisterUser" class="btn btn-info">SignUp</a>
				</div>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Volver", "Listar")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>